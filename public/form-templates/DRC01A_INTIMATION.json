{
  "code": "DRC01A_INTIMATION",
  "title": "DRC-01A Pre-SCN Intimation Reply",
  "stage": "Assessment",
  "version": "1.0",
  "act_code": "GST",
  "description": "Reply template for Pre-SCN Intimation under DRC-01A as per Section 73/74 CGST Act",
  "fields": [
    { "key": "intimation_no", "label": "Intimation Number", "type": "string", "required": true, "placeholder": "DRC-01A/2025/XXXXXXXXX" },
    { "key": "intimation_date", "label": "Intimation Date", "type": "date", "required": true },
    { "key": "gstin", "label": "GSTIN", "type": "string", "required": true, "pattern": "^[0-9]{2}[A-Z]{5}[0-9]{4}[A-Z]{1}[1-9A-Z]{1}Z[0-9A-Z]{1}$" },
    { "key": "legal_name", "label": "Legal Name of Taxpayer", "type": "string", "required": true },
    { "key": "trade_name", "label": "Trade Name", "type": "string", "required": false },
    { "key": "financial_year", "label": "Financial Year", "type": "string", "required": true, "placeholder": "FY 2024-25" },
    { "key": "tax_period", "label": "Tax Period", "type": "string", "required": true, "placeholder": "April 2024 - March 2025" },
    { "key": "proposed_tax", "label": "Proposed Tax Demand", "type": "number", "required": false },
    { "key": "proposed_interest", "label": "Proposed Interest", "type": "number", "required": false },
    { "key": "proposed_penalty", "label": "Proposed Penalty", "type": "number", "required": false },
    { "key": "section_invoked", "label": "Section Invoked", "type": "string", "required": true, "placeholder": "Section 73 / Section 74" },
    { "key": "issue_description", "label": "Issue Description", "type": "text", "required": true, "maxLength": 2000, "placeholder": "Brief description of the issue raised in intimation" },
    { "key": "taxpayer_response", "label": "Taxpayer's Response", "type": "text", "required": false, "maxLength": 5000, "placeholder": "Detailed response to the intimation" },
    { "key": "supporting_documents", "label": "Supporting Documents", "type": "array", "required": false },
    { "key": "reply_date", "label": "Reply Date", "type": "date", "required": true },
    { "key": "reply_reference", "label": "Reply Reference Number", "type": "string", "required": false },
    { "key": "authorized_signatory", "label": "Authorized Signatory Name", "type": "string", "required": true },
    { "key": "designation", "label": "Designation", "type": "string", "required": false }
  ],
  "deadline": {
    "base_date_field": "intimation_date",
    "days": 30,
    "extension_allowed": false
  },
  "legal_reference": "Section 73/74 CGST Act, 2017 - Pre-SCN Intimation",
  "notes": [
    "DRC-01A is issued as a pre-SCN intimation to give taxpayers an opportunity to explain discrepancies before issuance of formal SCN",
    "Taxpayer must respond within 30 days from the date of intimation",
    "Proper explanation may prevent issuance of formal Show Cause Notice"
  ]
}
