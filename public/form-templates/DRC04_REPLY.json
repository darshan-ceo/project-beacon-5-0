{
  "code": "DRC04_REPLY",
  "title": "DRC-04 Reply (Documents Request)",
  "stage": "Demand",
  "version": "1.0",
  "prefill": {
    "client_name": "case.client.name",
    "gstin": "case.client.gstin",
    "pan": "case.client.pan",
    "address": "case.client.address",
    "case_id": "case.id",
    "case_title": "case.title",
    "stage": "case.currentStage",
    "notice_no": "case.notice.number",
    "notice_date": "case.notice.date",
    "authorized_signatory": "case.signatory.fullName"
  },
  "fields": [
    {
      "key": "reference_drc04_no",
      "label": "Reference DRC-04 Number",
      "type": "string",
      "required": true
    },
    {
      "key": "documents_provided",
      "label": "Documents Provided",
      "type": "textarea",
      "required": true
    },
    {
      "key": "documents_list",
      "label": "List of Documents",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    {
      "key": "reasons_unavailability",
      "label": "Reasons for Unavailability (if any)",
      "type": "textarea",
      "required": false
    },
    {
      "key": "alternative_evidence",
      "label": "Alternative Evidence",
      "type": "textarea",
      "required": false
    },
    {
      "key": "prayer",
      "label": "Prayer",
      "type": "textarea",
      "required": true
    }
  ],
  "output": {
    "filename": "DRC04_REPLY_${case.id}_${now:YYYYMMDD}.pdf",
    "dms_folder_by_stage": true,
    "timeline_event": "DRC-04 Reply submitted"
  }
}
