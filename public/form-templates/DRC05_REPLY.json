{
  "code": "DRC05_REPLY",
  "title": "DRC-05 Reply (Tax Calculation Notice)",
  "stage": "Adjudication",
  "version": "1.0",
  "prefill": {
    "client_name": "case.client.name",
    "gstin": "case.client.gstin",
    "pan": "case.client.pan",
    "address": "case.client.address",
    "case_id": "case.id",
    "case_title": "case.title",
    "stage": "case.currentStage",
    "notice_no": "case.notice.number",
    "notice_date": "case.notice.date",
    "authorized_signatory": "case.signatory.fullName"
  },
  "fields": [
    {
      "key": "reference_drc05_no",
      "label": "Reference DRC-05 Number",
      "type": "string",
      "required": true
    },
    {
      "key": "tax_period",
      "label": "Tax Period",
      "type": "string",
      "required": true
    },
    {
      "key": "disputed_amount",
      "label": "Disputed Tax Amount",
      "type": "number",
      "required": true,
      "minimum": 0
    },
    {
      "key": "tax_computation_objections",
      "label": "Objections to Tax Computation",
      "type": "textarea",
      "required": true
    },
    {
      "key": "revised_calculation",
      "label": "Revised Tax Calculation",
      "type": "textarea",
      "required": true
    },
    {
      "key": "supporting_documents",
      "label": "Supporting Documents",
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    {
      "key": "prayer",
      "label": "Prayer",
      "type": "textarea",
      "required": true
    }
  ],
  "output": {
    "filename": "DRC05_REPLY_${case.id}_${now:YYYYMMDD}.pdf",
    "dms_folder_by_stage": true,
    "timeline_event": "DRC-05 Reply submitted"
  }
}
