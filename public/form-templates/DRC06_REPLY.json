{
  "code": "DRC06_REPLY",
  "title": "DRC-06 Reply (Inspection Order)",
  "stage": "Adjudication",
  "version": "1.0",
  "prefill": {
    "client_name": "case.client.name",
    "gstin": "case.client.gstin",
    "pan": "case.client.pan",
    "address": "case.client.address",
    "case_id": "case.id",
    "case_title": "case.title",
    "stage": "case.currentStage",
    "notice_no": "case.notice.number",
    "notice_date": "case.notice.date",
    "authorized_signatory": "case.signatory.fullName"
  },
  "fields": [
    {
      "key": "reference_drc06_no",
      "label": "Reference DRC-06 Number",
      "type": "string",
      "required": true
    },
    {
      "key": "inspection_date",
      "label": "Inspection Date",
      "type": "date",
      "required": true
    },
    {
      "key": "records_produced",
      "label": "Records Produced",
      "type": "textarea",
      "required": true
    },
    {
      "key": "objections",
      "label": "Objections to Inspection",
      "type": "textarea",
      "required": false
    },
    {
      "key": "compliance_statement",
      "label": "Compliance Statement",
      "type": "textarea",
      "required": true
    },
    {
      "key": "prayer",
      "label": "Prayer",
      "type": "textarea",
      "required": true
    }
  ],
  "output": {
    "filename": "DRC06_REPLY_${case.id}_${now:YYYYMMDD}.pdf",
    "dms_folder_by_stage": true,
    "timeline_event": "DRC-06 Reply submitted"
  }
}
