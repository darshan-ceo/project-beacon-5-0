    {
      "key": "balance_convenience",
      "label": "Balance of Convenience",
      "type": "textarea",
      "required": true
    },
    {
      "key": "deposit_made",
      "label": "Deposit Made",
      "type": "number",
      "required": false,
      "minimum": 0
    },
    {
      "key": "prayer",
      "label": "Prayer",
      "type": "textarea",
      "required": true
